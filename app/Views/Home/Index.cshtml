@{
    ViewData["Title"] = "Home Page";
}

<div>

    <script>
        $('.carousel').carousel(){
            interval: 10000;
        }
    </script>

    <style>
        .carousellegenda {
            text-align: center;
            font-size: 25px;
            padding: 0 .625rem;
            text-overflow: ellipsis;
            font-family: Sans-Serif;
            color: #fff;
        }
    </style>

    <div class="container-fluid carousellegenda">

        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
